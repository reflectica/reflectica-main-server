# HTTPS and Security Configuration

# Set to 'true' to enforce HTTPS redirects even in development
# In production (NODE_ENV=production), HTTPS is enforced by default
ENFORCE_HTTPS=false

# HSTS (HTTP Strict Transport Security) Configuration
# Maximum age in seconds for HSTS header (default: 31536000 = 1 year)
HSTS_MAX_AGE=31536000

# Include subdomains in HSTS policy (default: true)
HSTS_INCLUDE_SUBDOMAINS=true

# Enable HSTS preload (default: false)
# Only set to true if you've submitted your domain to the HSTS preload list
HSTS_PRELOAD=false